SRCS=fgs-module.c


LIBDIR=.

IMPORT=.
PRIVATE=.

INC=-I $(IMPORT) -I $(PRIVATE)

SINC=-I $(LIBDIR)

X64LIBDIR=.

#LIB=ih264dec_rel_mingw_x64
LIB=fgs_rel_mingw_x86

LIBNAME=lib$(LIB).a


# PATHLIBAV1=$(X64LIBDIR)/libih264dec_rel_mingw_x64.a

TARGET=fgs-module.js

TESTTARGET=testfgs

DEPS=$(SRCS) Makefile

all: $(TARGET)

test: $(TESTTARGET)

$(TARGET): $(DEPS)
		emcc -o $@ -O3 -s WASM=1 \
				-s ALLOW_MEMORY_GROWTH=1 \
				-s PTHREAD_POOL_SIZE=4 \
				-s MODULARIZE \
				-s EXPORT_NAME=Create_fgs_module \
				-s "EXPORTED_FUNCTIONS=['_create_fgs', \
										'_FGS_process', \
										'_get_outBufY', \
										'_get_outBufU', \
										'_get_outBufV', \
										'_get_inpBufY', \
										'_get_inpBufU', \
										'_get_inpBufV', \
										'_FGS_delete' \
									   ]" \
				$(SRCS) $(SINC) -L. -l$(LIB) -pthread

$(TESTTARGET): test.c $(DEPS) $(X64LIBAV1)
		#cc -o $@ -O3 test.c $(SRCS) $(INC) -L $(X64LIBDIR) -l$(LIB)
		emcc -o $@ -O3 test.c $(SRCS) $(INC) -L $(X64LIBDIR) -l$(LIB)

$(TESTTARGET)g: test.c $(DEPS) $(X64LIBAV1)
		#cc -o $@ -g test.c $(SRCS) $(INC) -L $(X64LIBDIR) -l$(LIB)
		emcc -o $@ -g test.c $(SRCS) $(SINC) -L $(X64LIBDIR) -l$(LIB)

clean:
		-rm $(TARGET) $(TESTTARGET) $(TESTTARGET)g

$(EMLIBAV1): $(LIBDIR)
		(cd $(LIBDIR); \
			cmake  `pwd | sed 's?$(LIBDIR)?$(AOMDIR)?'` \
		        -DENABLE_CCACHE=1 \
		        -DAOM_TARGET_CPU=generic \
		        -DENABLE_DOCS=0 \
		        -DCONFIG_ACCOUNTING=1 \
		        -DCONFIG_INSPECTION=1 \
		        -DCONFIG_MULTITHREAD=0 \
		        -DCONFIG_RUNTIME_CPU_DETECT=0 \
		        -DCONFIG_UNIT_TESTS=0 \
		        -DCONFIG_WEBM_IO=0 \
		        -DCMAKE_TOOLCHAIN_FILE=`../../get-emcmake.sh`; \
			make \
		)

$(X86LIBAV1): $(X86LIBDIR)
		(cd $(X86LIBDIR); cmake  `pwd | sed 's?$(X86LIBDIR)?$(AOMDIR)?'`; make)

$(LIBDIR):
		mkdir $(LIBDIR)

$(X86LIBDIR):
		mkdir $(X86LIBDIR)
